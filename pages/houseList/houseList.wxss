page {
  background-color: #f9f9f9;
  width: 100%;
  height: 100%;
}
.header {
  transition: transform 0.5s;
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  z-index: 33;
  transform: translateY(0);
}
.rules_txt{
  color: #F1612A;
  font-size: 24rpx;
  padding-bottom: 1rpx;
  border-bottom: 1rpx solid #F1612A;
}
.header.hidden {
  transform: translateY(-100%);
}
.card-list {
  overflow: hidden;
  position: relative;
  padding-bottom: 160rpx;
}
.section_empty {
  display: flex;
  flex-direction: column;
  height: calc(100% - 220rpx) !important;
}
.top-nav {
  width: 100%;
  height: 112rpx;
}
.block {
  height: 220rpx;
}
.house_monitor {
  position: fixed;
  left: 0;
  right: 0;
  bottom: 30rpx;
  z-index: 11
}

.house_monitor .monitor_btn {
  width: 480rpx;
  height: 92rpx;
  background: -webkit-linear-gradient(top, #e75d28, #e94444);
  box-shadow: 4rpx 4rpx 8rpx 0px rgba(198, 55, 35, 0.48);
  color: #fff;
  line-height: 92rpx;
  border-radius: 46rpx;
  text-align: center;
  margin: 0 auto;
  font-size: 28rpx;
}


.search_empty {
  flex: 1;
  background: #ffffff;
}
.bg_border {
  background: #f9f9f9;
  height: 12rpx;
}

.no-more-data {
  width:100%;
  text-align: center;
  color:#A6A6A6;
  font-size: 24rpx;
  margin-top: -10px
}