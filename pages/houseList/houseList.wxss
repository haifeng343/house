page {
  background-color: #f9f9f9;
  width: 100%;
  height: 100%;
}
.header {
  transition: transform 0.5s;
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  z-index: 33;
  transform: translateY(0);
}
.header.hidden {
  transform: translateY(-100%);
}
.card-list {
  overflow: hidden;
  position: relative;
}
.section_hidden {
  width: 100%;
  height: 100%;
}
.scroll-view {
  height: 100%;
}
.section_empty {
  display: flex;
  flex-direction: column;
  height: calc(100% - 220rpx) !important;
}
.top-nav {
  width: 100%;
  height: 112rpx;
}
.block {
  height: 220rpx;
}

.house_detail {
  display: flex;
  align-items: center;
  height: 88rpx;
  background: #fff4f0;
  padding: 0 20rpx;
  z-index: 33;
}

.scroll_detail {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  z-index: 20;
  margin-top: 0;
}

.house_detail view {
  flex: 1;
  color: #1d1d1d;
}

.house_detail .check_detail {
  color: #f1612a;
  display: flex;
  align-items: center;
  justify-content: flex-end;
}

.house_detail .check_detail .check_more {
  width: 14rpx;
  height: 24rpx;
  margin-left: 8rpx;
}

.house_scroll {
  margin-top: 18rpx;
}

.house_card {
  margin: 0 28rpx 20px;
  position: relative;
  border-bottom: 1rpx solid #e8e8e8;
  padding-bottom: 30rpx;
}

.house_card .swiper {
  height: 360rpx;
  z-index: -1;
  position: relative;
}

.house_card .house_image {
  width: 100%;
  height: 360rpx;
  border-radius: 8rpx;
}

.house_card .before-load {
  width: 0;
  height: 0;
  opacity: 0;
}
.house_card .after-load {
  width: 0;
  height: 0;
  opacity: 0;
}
.house_card .star {
  width: 44rpx;
  height: 44rpx;
  position: absolute;
  top: 24rpx;
  right: 24rpx;
}

.house_card .house_classify {
  position: absolute;
  top: 0;
  left: 0;
  width: 92rpx;
  height: 48rpx;
  background-color: rgba(0, 0, 0, 0.3);
  color: #fff;
  text-align: center;
  border-radius: 8rpx 0 8rpx 0;
  line-height: 48rpx;
}

.house_card .house_swiper {
  position: absolute;
  top: 310rpx;
  right: 42rpx;
  width: 68rpx;
  height: 30rpx;
  background-color: rgba(0, 0, 0, 0.7);
  color: #fff;
  text-align: center;
  border-radius: 16rpx;
  font-size: 24rpx;
  line-height: 30rpx;
}

.house_card .house_price {
  position: absolute;
  left: -8rpx;
  top: 290rpx;
  width: auto;
  height: 58rpx;
  color: #fff;
  font-size: 32rpx;
  line-height: 50rpx;
  text-align: center;
  padding: 0 20rpx;
  background:linear-gradient(180deg,rgba(231,93,40,1) 0%,rgba(233,68,68,1) 100%);
  border-radius: 4rpx 6rpx 6rpx 0;
  opacity:0.95;
}

.house_card .house_price .triangle {
  position: absolute;
  left: -4rpx;
  top: 58rpx;
  width: 0;
  height: 0;
  border: 8rpx solid;
  margin-left: 4rpx; 
  border-right: 0;
  border-color: #941200 transparent transparent transparent;
}

.house_bottom {
  display: flex;
  margin-top: 22rpx;
}

.house_bottom .house_message {
  flex: 1;
}

.house_bottom .house_photo {
  width: 100rpx;
}

.house_card .house_name {
  display: flex;
  align-items: center;
  font-size: 32rpx;
  color: #1d1d1d;
  margin-bottom: 6rpx;
  font-weight: bold;
}

.house_card .house_name text {
  width: 554rpx;
  text-overflow: ellipsis;
  overflow: hidden;
  white-space: nowrap;
}

.house_card .hotel {
  width: 40rpx;
  height: 42rpx;
  margin-right: 10rpx;
}

.house_card .house_type {
  font-size: 24rpx;
  color: #474747;
  display: flex;
  align-items: center;
}

.house_card .house_tag{
  width: 110rpx;
  height: 34rpx;
  color: #FF6363;
  border:2rpx solid #FF6363;
  box-sizing: border-box;
  border-radius: 18rpx;
  font-size: 20rpx;
  margin-top: 8rpx;
  text-align: center;
  line-height: 30rpx;
}
.house_card .house_tag_none{
  border: none
}

.house_card .distance {
  width: 26rpx;
  height: 26rpx;
}

.house_photo {
  display: flex;
  align-items: center;
  justify-content: flex-end;
}

.house_photo .photo {
  width: 80rpx;
  height: 80rpx;
  border-radius: 40rpx;
}

.house_monitor {
  position: fixed;
  left: 0;
  right: 0;
  bottom: 30rpx;
}

.house_monitor .monitor_btn {
  width: 480rpx;
  height: 92rpx;
  background: -webkit-linear-gradient(top, #e75d28, #e94444);
  box-shadow: 4rpx 4rpx 8rpx 0px rgba(198, 55, 35, 0.48);
  color: #fff;
  line-height: 92rpx;
  border-radius: 46rpx;
  text-align: center;
  margin: 0 auto;
  font-size: 28rpx;
}

.house_shortcuts {
  position: fixed;
  right: 12rpx;
  bottom: 140rpx;
  z-index: 30;
  transform: translateX(0);
  transition: transform 1s;
}

.house_shortcuts .top,
.house_shortcuts .sort {
  width: 100rpx;
  height: 100rpx;
}

.house_shortcuts .top {
  margin-bottom: 20rpx;
}

.house_shortcuts.hidden {
  transform: translateX(calc(100% + 12rpx));
}

.house_loading {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  width: 100%;
  height: 100%;
  z-index: 999;
  /* background: rgba(0,0,0,0.2); */
  /* display: flex;
  justify-content: center;
  align-items: center */
}
.house_loading image {
  margin-top: 380rpx;
  width: 750rpx;
  height: 406rpx;
}
.search_empty {
  flex: 1;
  background: #ffffff;
}
.bg_border {
  background: #f9f9f9;
  height: 12rpx;
}
.search_empty .search_view {
  display: flex;
  justify-content: center;
}
.search_empty .search_view:nth-child(1) {
  margin-top: 160rpx;
}
.search_empty .search_view:nth-child(2) {
  margin-top: 40rpx;
}
.search_empty .search_view:nth-child(3) {
  margin-top: 30rpx;
  text-align: center;
  margin: 30rpx 108rpx 0;
}
.search_empty .search_title {
  font-size: 32rpx;
  color: #1d1d1d;
}
.search_empty .search_tip {
  font-size: 28rpx;
  color: #a6a6a6;
}
.search_empty .empty_image {
  width: 320rpx;
  height: 250rpx;
}

.no-more-data {
  width:100%;
  text-align: center;
  color:#A6A6A6;
  position: absolute;
  bottom:90px;
  left:0;
}