page {
  background-color: #f9f9f9;
  width: 100%;
  height: 100%;
}
.header {
  transition: transform 1s;
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  z-index: 33;
  transform: translateY(0);
}
.header.hidden {
  transform: translateY(-100%);
}
.card-list {
  overflow: hidden;
  position: relative;
  padding-bottom: 180rpx;
}
.section_hidden{
  width: 100%;
  height: 100%;
}
.scroll-view {
  height: 100%;
}
.section_empty{
  display: flex;
  flex-direction: column;
  height: calc(100% - 220rpx) !important;
}
.top-nav {
  width: 100%;
  height: 112rpx;
}
.block {
  height: 220rpx;
}
.house_detail {
  display: flex;
  align-items: center;
  height: 88rpx;
  background: #fff4f0;
  padding: 0 20rpx;
}

.scroll_detail {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  z-index: 20;
  margin-top: 0;
}

.house_detail view {
  flex: 1;
  color: #1d1d1d;
}

.house_detail .check_detail {
  color: #f1612a;
  display: flex;
  align-items: center;
  justify-content: flex-end;
}

.house_detail .check_detail .check_more {
  width: 14rpx;
  height: 24rpx;
  margin-left: 8rpx;
}


.monit_start{
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  height: 128rpx;
  background: #FFFFFF;
  border-top: 1px solid #E8E8E8;
  line-height: 128rpx;
  z-index: 11
}
.monit_start view{
  margin: 0 28rpx;
}
.monit_start .monit_btn{
  width: 240rpx;
  height: 92rpx;
  background: -webkit-linear-gradient(top,#E75D28,#E94444);
  box-shadow: 4rpx 4rpx 8rpx 0px rgba(198, 55, 35, 0.48);
  display: inline-block;
  color: #FFFFFF;
  border-radius: 46rpx;
  line-height: 92rpx;
  text-align: center;
  position: absolute;
  right: 28rpx;
  top:50%;
  margin-top: -46rpx;
}
.monit_start .price{color: #FF6363}
.monit_start text:nth-child(3){margin-right: 20rpx;}
.monit_start text:nth-child(5){margin-right: 48rpx;}
.monit_stop text:nth-child(5){margin-right: 0}
.monit_stop text:nth-child(2){margin-right: 48rpx;}
.monit_stop text:nth-child(3){margin-right: 0;}
.monit_stop text.time_line{margin-right: 8rpx}
.monit_save .monit_btn{
  width: 324rpx;
  right: 38rpx;
}
.monit_save .monit_back{
  width: 324rpx;
  background: #FFFFFF;
  color: #E75D28;
  border: 1px solid #E75D28;
  left: 38rpx;
  box-shadow: none;
}
.monit_save .monit_update{box-shadow: none;}
.search_empty{
  flex: 1;
  background: #FFFFFF;
}
.bg_border{
  background: #F9F9F9;
  height: 12rpx;
}
.search_empty .search_view {
  display: flex;
  justify-content: center;
}
.search_empty .search_view:nth-child(1) {
  margin-top: 160rpx;
}
.search_empty .search_view:nth-child(2) {
  margin-top: 40rpx;
}
.search_empty .search_view:nth-child(3) {
  margin-top: 30rpx;
  text-align: center;
  margin: 30rpx 108rpx 0;
}
.search_empty .search_title {
  font-size: 32rpx;
  color: #1d1d1d;
}
.search_empty .search_tip {
  font-size: 28rpx;
  color: #a6a6a6;
}
.search_empty .empty_image {
  width: 320rpx;
  height: 250rpx;
}
.search_empty .monitor_empty_image {
  width: 320rpx;
  height: 222rpx;
}
.house_monitor {
  position: fixed;
  left: 0;
  right: 0;
  bottom: 30rpx;
  z-index: 11
}
.house_monitor .monitor_btn {
  width: 480rpx;
  height: 92rpx;
  background: -webkit-linear-gradient(top,#E75D28,#E94444);
  box-shadow: 4rpx 4rpx 8rpx 0px rgba(198, 55, 35, 0.48);
  color: #fff;
  line-height: 92rpx;
  border-radius: 46rpx;
  text-align: center;
  margin: 0 auto;
  font-size: 28rpx;
}
.no-more-data {
  width:100%;
  text-align: center;
  color:#A6A6A6;
  font-size: 24rpx;
  margin-top: -10px
}