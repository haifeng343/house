@import '../../assets/styles/font.wxss';
page {
  height: 100%;
}
page .page {
  background-color: #fff;
  width: 100%;
  height: 100%;
}
page .page .header {
  display: flex;
  width: 100%;
  align-items: center;
  height: 100rpx;
  font-size: 36rpx;
  color: #1d1d1d;
  background-color: #f9f9f9;
}
page .page .header .title {
  margin-left: 28rpx;
}
page .page .header .icon-wrapper {
  height: 100%;
  padding: 0 28rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-left: auto;
  margin-right: 32rpx;
}
page .page .header .icon-wrapper .uniE94A {
  color: #e94444;
  font-size: 40rpx;
}
page .page .content {
  padding: 0 28rpx;
  position: relative;
}
page .page .content textarea {
  height: 230rpx;
  border-bottom: solid 2rpx #f4f4f4;
  margin-bottom: 12rpx;
  width: 100%;
  padding: 20rpx 0;
  font-size: 28rpx;
  box-sizing: border-box;
}
page .page .content .desc {
  font-size: 20rpx;
  color: #1d1d1d;
}
page .page .content .count {
  position: absolute;
  font-size: 28rpx;
  color: #d6d6d6;
  bottom: 52rpx;
  right: 36rpx;
}
page .page .button-wrapper {
  margin-top: 92rpx;
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
}

page .page .button {
  width: 484rpx;
  height: 92rpx;
  background: linear-gradient(
    180deg,
    rgba(231, 93, 40, 1) 0%,
    rgba(233, 68, 68, 1) 100%
  );
  box-shadow: 4rpx 4rpx 8rpx 0rpx rgba(198, 55, 35, 0.48);
  border-radius: 46rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #fff;
  font-weight:500;
  font-size: 28rpx;
}
