@import "../../assets/styles/font.wxss";
@import "../../assets/styles/flex.wxss";

page {
  height: 100%;
}

page .page {
  background-color: #f9f9f9;
  width: 100%;
  height: 100%;
  overflow: hidden;
  display: flex;
  flex-direction: column;
}

page .page .header {
  height: 360rpx;
  width: 100%;
  position: relative;
}

page .page .header .bg {
  position: absolute;
  height: 352rpx;
  width: 750rpx;
  left: 0;
}

page .page .header .content {
  width: 100%;
  height: 100%;
  position: relative;
  z-index: 2;
  box-sizing: border-box;
}

page .page .header .user {
  color: #fff;
  font-size: 28rpx;
  font-weight: 400;
  background-color: transparent;
  border: none;
  outline: none;
  text-align: left;
  display: flex;
  width: 100%;
  justify-content: center;
  align-items: center;
  height: 170rpx;
}

page .page .header .user .avator {
  width: 112rpx;
  height: 112rpx;
  border-radius: 56rpx;
  box-sizing: border-box;
  border: solid 4rpx #fff;
  flex: 0 0 auto;
  margin-right: 28rpx;
}

page .page .header .user .name {
  font-size: 28rpx;
  color: #fff;
  line-height: 32rpx;
  height: 32rpx;
  margin-top: 8rpx;
  display: flex;
  align-items: center;
}

page .page .header .action-list .financial-item {
  text-align: center;
}

page .page .header .action-list .financial-item .label {
  font-size: 28rpx;
  line-height: 40rpx;
  display: flex;
  align-items: center;
}

page .page .header .action-list .financial-item .label .uniE92D {
  font-size: 32rpx;
  margin-left: 8rpx;
}

page .page .header .action-list .financial-item .value {
  font-size: 52rpx;
  font-weight: 500;
  line-height: 76rpx;
}

page .page .header .action-list {
  width: 95%;
  height: 284rpx;
  box-sizing: border-box;
  background-color: #fff;
  border: 1px solid #fff;
  color: #e75d28;
  box-shadow: 2px 3px 8px 0px rgba(218, 78, 58, 0.23);
  border-radius: 6px;
  display: flex;
  align-items: center;
  position: absolute;
  transform: translateX(-50%);
  left: 50%;
}

page .page .header .action-list .action-item {
  text-align: center;
  font-size: 28rpx;
  width: 50%;
}

page .page .header .action-list .action-item .btn {
  flex: 0;
  width: 220rpx;
  height: 66rpx;
  border-radius: 66rpx;
  border: 1px solid rgba(231, 93, 40, 1);
  text-align: center;
  line-height: 66rpx;
  margin: 30rpx auto 0;
}

page .page .header .action-list .action-item .title {
  color: #e75d28;
  font-size: 28rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

page .page .header .action-list .action-item .title .uniE92D {
  margin-left: 8rpx;
}

page .page .header .action-list .action-item .number {
  color: #e75d28;
  font-size: 52rpx;
  font-weight: bold;
}

page .page .header .action-list .action-item .uniE927 {
  font-size: 40rpx;
  line-height: 100rpx;
  margin-bottom: 100rpx;
}

page .page .menu-list {
  flex: 1;
  background-color: #fff;
  padding-top: 120rpx;
  height: calc(100% - 360rpx);
  box-sizing: border-box;
}

.tipDialog {
  position: fixed;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  z-index: 9999;
  display: flex;
  align-items: center;
  justify-content: center;
}

.dialog-overlay {
  position: fixed;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  background-color: rgba(0, 0, 0, 0.4);
  z-index: 11;
}

.dialog-container {
  width: 75%;
  background-color: #fff;
  border-radius: 16rpx;
  position: relative;
  z-index: 22;
  padding: 0 60rpx;
  box-sizing: border-box;
}

.dialog-container .dialog-title {
  height: 120rpx;
  border-bottom: solid 2rpx #fde1d7;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 36rpx;
  font-weight: 500;
  color: #1d1d1d;
}

.dialog-container .dialog-content {
  height: 184rpx;
  box-sizing: border-box;
  padding-top: 40rpx;
}

.dialog-container .dialog-button {
  width: 100%;
  display: flex;
  align-items: flex-start;
  justify-content: center;
  height: 132rpx;
}

.dialog-container .dialog-button .button {
  width: 100%;
  height: 92rpx;
  background: linear-gradient(
    180deg,
    rgba(231, 93, 40, 1) 0%,
    rgba(233, 68, 68, 1) 100%
  );
  box-shadow: 4rpx 4rpx 8rpx 0rpx rgba(198, 55, 35, 0.48);
  border-radius: 46rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  color: #fff;
  font-weight: 400;
  position: relative;
}

.dialog-container .dialog-button .button:active {
  top: 2rpx;
}

page .page .contact {
  padding: 32rpx 0;
  display: flex;
  justify-content: center;
  align-items: center;
  color: #f1612a;
  font-size: 28rpx;
  width: 100%;
  background-color: #fff;
  border: none;
  line-height: 40rpx;
  height: 40rpx;
  box-sizing: content-box;
}
page .page .contact::after {
  display: none;
}
page .page .contact .uniE96A {
  font-size: 40rpx;
  margin-right: 16rpx;
}
