.section {
  height: 100%;
}

.list {
  width: 100%;
  height: 100%;
  padding: 0 28rpx;
  box-sizing: border-box;
}

.list .item {
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  font-size: 28rpx;
  color: #1d1d1d;
  border-bottom: 2rpx solid rgba(232, 232, 232, 0.5);
  background: url(data:image/png;base64,) no-repeat right center;
  background-size: 22rpx 22rpx;
}

.list .item.active {
  background: url(data:image/png;base64,) no-repeat right center;
  background-size: 22rpx 22rpx;
}
