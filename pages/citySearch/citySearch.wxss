@import '../../assets/styles/font.wxss';
@import '../../assets/styles/flex.wxss';

page {
  height: 100%;
}

page .page {
  background-color: #fff;
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
}

page .page .header {
  background-color: #fff;
  padding: 0 32rpx;
  flex: 0;
}

page .page .header .search-bar-wrapper {
  height: 68rpx;
  border-radius: 34rpx;
  width: 100%;
  background-color: #f9f9f9;
  margin-top: 30rpx;
  position:relative;
}

page .page .header .search-bar-wrapper input {
  font-size: 24rpx;
  flex: 1;
}
page .page .header .search-bar-wrapper .search-btn {
  flex:0 0 auto;
  width:100rpx;
  height: 44rpx;
  font-size: 28rpx;
  background-color: #F1612A;
  color: #fff;
  text-align: center;
  line-height: 44rpx;
  background: linear-gradient(180deg, rgba(231, 93, 40, 1) 0%, rgba(233, 68, 68, 1) 100%);
  box-shadow: 2px 2px 4px 0px rgba(198, 55, 35, 0.48);
  border-radius: 20rpx;
  margin-right: 26rpx;
}

page .page .header .search-bar-wrapper .uniE908 {
  color: #9b9b9b;
  font-size: 28rpx;
  margin-left: 40rpx;
  margin-right: 16rpx;
}

page .page .city-list {
  margin-top: 20rpx;
  box-sizing: border-box;
  padding: 0 28rpx;
}

page .page .city-list .label {
  color: #F1612A;
  background-color: rgba(241, 97, 42, .17);
  border-radius: 18rpx;
  width: 72rpx;
  font-size: 20rpx;
  height: 36rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 12rpx;
}

page .page .city-list .type {
  margin-left: auto;
  color: #bec3cd;
  font-size: 24rpx;
  margin-right: 24rpx;
}

page .page .city-list .uniE928 {
  margin-left: auto;
  color: #bec3cd;
  font-size: 24rpx;
  margin-right: 24rpx;
}

page .page .city-list .uniE941 {
  color: #bec3cd;
  font-size: 24rpx;
  margin-right: 12rpx;
}

page .page .city-list .child-city-item {
  font-size: 28rpx;
  color: #1d1d1d;
  height: 80rpx;
  display: flex;
  align-items: center;
  box-sizing: border-box;
  padding-left: 100rpx;
  border-bottom: solid 2rpx #e8e8e8;
}

page .page .city-list .child-city-item .name {
  font-weight: bold;
}

page .page .city-list .next-icon {
  width: 32rpx;
  height: 26rpx;
  margin-right: 12rpx;
}

page .page .city-list .city-item {
  font-size: 28rpx;
  color: #F1612A;
  height: 80rpx;
  display: flex;
  align-items: center;
  box-sizing: border-box;
  padding-left: 24rpx;
  border-bottom: solid 2rpx #e8e8e8;
}
.city-no-data {
  width: 100%;
  padding: 60rpx 0;
  text-align: center;
  color: #999999;
}