
.section{
  padding-bottom: 128rpx;
}
.section_bottom{padding-bottom: 0}
.statistics_query,.house_low_price,.statistics_detail{
  font-size: 32rpx;
  color: #1D1D1D;
  padding: 24rpx 0 0;
  background: #FFFFFF;
}
.house_low {
  margin: 0 28rpx;
  display: flex;
  align-items: center;
}

.house_low .price {
  width: 22rpx;
  height: 28rpx;
  margin-right: 8rpx;
}

.line{
  width: 100%;
  height: 12rpx;
  background: #F9F9F9;
}

.monit_start{
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  height: 128rpx;
  background: #FFFFFF;
  border-top: 1px solid #E8E8E8;
  line-height: 128rpx;
  z-index: 22
}
.monit_start view{
  margin: 0 28rpx;
}
.monit_start .monit_btn{
  width: 240rpx;
  height: 92rpx;
  background: -webkit-linear-gradient(top,#E75D28,#E94444);
  box-shadow: 4rpx 4rpx 8rpx 0px rgba(198, 55, 35, 0.48);
  display: inline-block;
  color: #FFFFFF;
  border-radius: 46rpx;
  line-height: 92rpx;
  text-align: center;
  position: absolute;
  right: 28rpx;
  top:50%;
  margin-top: -46rpx;
  font-size: 28rpx;
}
.monit_start .price{color: #FF6363}
.monit_start text:nth-child(2){margin-right: 20rpx;}
.monit_stop text:nth-child(2){margin-right: 48rpx;}
.monit_stop text:nth-child(3){margin-right: 0;}
.monit_save text:nth-child(2){margin-right: 0}
.monit_save text:nth-child(3){margin-right: 0;}
.monit_save .monit_btn{width: 324rpx;right: 38rpx;}
.monit_start text.time_line,.monit_stop text.time_line{margin-right: 8rpx}
.monit_save .monit_back{
  width: 324rpx;
  background: #FFFFFF;
  color: #E75D28;
  border: 1px solid #E75D28;
  left: 38rpx;
  box-shadow: none;
}
.monit_save .monit_update{box-shadow: none;}