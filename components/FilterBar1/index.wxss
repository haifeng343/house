@import "../../assets/styles/font.wxss";

:host {
  display: flex;
  flex-direction: column;
  width: 100%;
}

.container {
  height: 100rpx;
  width: 100%;
  box-sizing: border-box;
  padding: 0 30rpx;
}

.tab-list {
  display: flex;
  align-items: center;
  justify-content: space-between;
  height: 100%;
}

.tab-item {
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: flex-start;
  width: 100rpx;
  color: #1d1d1d;
  font-weight: 500;
  position: relative;
}

.tab-item.tab-sort-item {
  width: 40rpx;
  font-size: 32rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  position: relative;
  top: 4rpx;
  right: 16rpx;
}

.tab-item .tab-title {
  width: 100%;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  font-size: 28rpx;
}

.tab-item .uniE951 {
  font-size: 16rpx;
  position: absolute;
  right: 0;
  top: 50%;
}

.tab-item.active {
  color: #f1612a;
}

.toppanel-container {
  position: fixed;
  top: 100rpx;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 333;
}

.price-panel,
.type-panel {
  width: 100%;
  height: 540rpx;
  display: flex;
  flex-direction: column;
}

.filter-panel {
  height: 880rpx;
}

.content-wrapper {
  box-sizing: border-box;
  padding: 28rpx;
}

.price-title {
  font-size: 32rpx;
  color: #1d1d1d;
  font-weight: 500;
  position: relative;
  padding-left: 40rpx;
}

.button-wrapper {
  border-top: solid 2rpx #f4efef;
  display: flex;
  align-items: center;
  justify-content: space-around;
  background-color: #fff;
  height: 112rpx;
  width: 100%;
  margin-top: auto;
  flex: 0 0 auto;
  position: relative;
}
.scroll_mask {
  width: 100%;
  height: 40rpx;
  position: absolute;
  top:-40rpx;
  left: 0;
  background: linear-gradient(rgba(255,255,255,0) 0%,rgba(255,255,255,1) 90%,rgba(255,255,255,1) 100%);
}

.button {
  width: 200rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  box-sizing: border-box;
  height: 72rpx;
  font-weight: 500;
  border-radius: 36rpx;
}

.button-submit {
  color: #fff;
  background-image: linear-gradient(180deg, #e75d28 0%, #e94444 100%);
}

.button-reset {
  border: solid 2rpx #e75d28;
  color: #e75d28;
}

.title-icon {
  position: absolute;
  width: 11px;
  height: 14px;
  top: 50%;
  left: 12rpx;
  transform: translateY(-50%);
}

.filter-list {
  padding: 28rpx;
}

.filter-panel .filter-list {
  height: 740rpx;
  overflow: scroll;
  width: calc(100% + 48rpx);
  padding-bottom: 0;
}

.type-panel .filter-list {
  height: 480rpx;
  overflow: scroll;
  width: calc(100% + 48rpx);
  padding-bottom: 0;
}

.filter-item {
  display: flex;
  flex-direction: column;
  margin-bottom: 20rpx;
  flex: 0 0 auto;
  width: calc(100% - 96rpx);
}

.filter-title {
  font-size: 32rpx;
  color: #1d1d1d;
  font-weight: 500;
  position: relative;
  padding-left: 40rpx;
  flex: 0 0 auto;
}

.option-list {
  display: flex;
  align-items: center;
  flex-wrap: wrap;
  margin-top: 20rpx;
  flex: 0 0 auto;
  width: 100%;
}

.option-item {
  height: 48rpx;
  box-sizing: border-box;
  border: solid 2rpx #f0f0f0;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 20rpx;
  font-size: 28rpx;
  color: #1d1d1d;
  font-weight: 400;
  background-color: #f0f0f0;
  border-radius: 48rpx;
  margin-bottom: 20rpx;
  width: 146rpx;
}

.option-item.active {
  border-color: #d33721;
  background-color: #f1612a;
  color: #fff;
}

.area-wrapper {
  display: flex;
  height: 600rpx;
  position: relative;
}

.area-list {
  overflow: hidden;
  height: 100%;
}

.area-list.level1 {
  flex: 0 0 250rpx;
  background-color: #f9f9f9;
}

.area-list.level1 .area-item.active {
  background-color: #fff;
  color: #f1612a;
}

.area-list.level1 .area-item.active::before {
  content: "";
  width: 12rpx;
  height: 12rpx;
  background-color: #f1612a;
  position: absolute;
  top: 50%;
  transform: rotate(45deg) translateY(-50%);
  left: 28rpx;
}

.area-list.level2 .area-item.active {
  color: #f1612a;
}

.area-list.level2 .area-item.active.has-child::before {
  content: "";
  width: 12rpx;
  height: 12rpx;
  background-color: #f1612a;
  position: absolute;
  top: 50%;
  transform: rotate(45deg) translateY(-50%);
  left: 28rpx;
}

.uniE930 {
  position: absolute;
  font-size: 20rpx;
  top: 50%;
  transform: translateY(-50%);
}

.area-list.level2 .uniE930 {
  right: 70rpx;
}

.area-list.level3 .uniE930 {
  right: 30rpx;
}

.area-list.level2 .area-item.active.no-child {
  background-color: #fff5f1;
}

.area-list.level3 .area-item.active {
  background-color: #fff5f1;
  color: #f1612a;
}

.area-list.level3 .area-item.active {
  background-color: #fff5f1;
  color: #f1612a;
}

.area-list.level2 .area-item {
  padding-right: 120rpx;
}

.area-list.level3 .area-item {
  padding-right: 60rpx;
}

.area-list .area-item {
  width: 100%;
  height: 92rpx;
  display: flex;
  align-items: center;
  justify-content: flex-start;
  font-size: 28rpx;
  color: #1d1d1d;
  font-weight: 400;
  position: relative;
  box-sizing: border-box;
  padding-left: 60rpx;
}

.area-list .area-item text {
  white-space: nowrap;
}

.area-list.level2 .area-item .area-label,
.area-list.level3 .area-item .area-label {
  width: 100%;
  overflow: hidden;
  text-overflow: ellipsis;
}

.area-list.level2 {
  flex: 1 0 calc(100% - 250rpx + 40rpx);
}

.area-list.level3 {
  width: 320rpx;
  border-left: solid 2rpx #f3f3f3;
  position: absolute;
  background-color: #fff;
  top: 0;
  right: -40rpx;
}

.area-list.level2 .area-item {
  justify-content: flex-start;
  padding-left: 60rpx;
  box-sizing: border-box;
}

.area-list.level3 .area-item {
  width: 280rpx;
}

.search-wrapper {
  height: 128rpx;
  display: flex;
  align-items: center;
}

.search-wrapper .input-wrapper {
  position: relative;
  margin-left: 32rpx;
}

.search-wrapper .input-wrapper .icon-font {
  position: absolute;
  top: 50%;
  transform: translateY(-50%);
}

.search-wrapper .input-wrapper input {
  width: 600rpx;
  height: 68rpx;
  border-radius: 34rpx;
  background-color: #f9f9f9;
  font-size: 28rpx;
  color: #1d1d1d;
  box-sizing: border-box;
  padding: 0 84rpx;
  text-align: left;
}

.input-placeholder {
  font-size: 28rpx;
  color: #cdcdcd;
}

.uniE908 {
  font-size: 28rpx;
  color: #9b9b9b;
  left: 32rpx;
}

.uniE907 {
  font-size: 28rpx;
  color: #c3c3c3;
  right: 0;
  width: 84rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  height: 68rpx;
}

.search-cancel {
  color: #f1612a;
  font-size: 28rpx;
  margin-left: auto;
  margin-right: 32rpx;
}

.search-result-wrapper {
  height: 600rpx;
  width: 100%;
  overflow: hidden;
}

.search-result-list {
  height: 100%;
  width: calc(100% + 40rpx);
}

.search-result-item {
  display: flex;
  align-items: center;
  height: 100rpx;
  margin-left: 120rpx;
  border-bottom: solid 2rpx #f4f4f4;
  margin-right: 28rpx;
  position: relative;
  width: calc(100% - 120rpx - 28rpx - 40rpx);
  box-sizing: border-box;
}

.search-result-tag {
  border-radius: 4rpx;
  background-color: #fff3ef;
  width: 68rpx;
  height: 36rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  color: #f1612a;
  position: absolute;
  top: 50%;
  transform: translateY(-50%);
  left: -84rpx;
  white-space: nowrap;
}

.search-result-item .uniE90C {
  font-size: 28rpx;
  margin-left: auto;
  color: #bec3cd;
}

.search-result-text {
  font-size: 28rpx;
  color: #1d1d1d;
  font-weight: 400;
  width: calc(100% - 80rpx);
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.search-result-text text {
  min-width: 0;
}

.search-result-text .hightlight {
  color: #f1612a;
  font-weight: 500;
}

.sort-panel {
  width: 100%;
  height: auto;
  display: flex;
  flex-direction: column;
  padding-bottom: 20rpx;
}

.sort-list {
  display: flex;
  flex-direction: column;
}

.sort-list .sort-item {
  height: 92rpx;
  width: 100%;
  display: flex;
  align-items: center;
  background-color: #fff;
  font-size: 28rpx;
  box-sizing: border-box;
  padding-left: 60rpx;
  position: relative;
}
.sort-list .sort-item.active {
  background-color: #f9f9f9;
  color: #f1612a;
}
.sort-list .sort-item .uniE930 {
  right: 40rpx;
}
