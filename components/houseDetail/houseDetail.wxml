			</view>
		</view>
		<view class="detail-house">
			<view class="detail-ol"><view class="grayText">看房:</view>{{houseSecondGetData.looktime?houseSecondGetData.looktime:'--'}}</view>
			<view class="detail-ol"><view class="grayText">入住:</view>{{houseSecondGetData.gettime?houseSecondGetData.gettime:'--'}}</view>
			<view class="detail-ol detail-ol-mtp"><view class="grayText">装修:</view>{{houseSecondGetData.decoratelevel?houseSecondGetData.decoratelevel:'--'}}</view>
			<view class="detail-ol detail-ol-mtp"><view class="grayText">朝向:</view>{{houseSecondGetData.heading?houseSecondGetData.heading:'--'}}</view>
