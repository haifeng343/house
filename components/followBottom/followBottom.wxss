@import '../../assets/styles/font.wxss';
.monit_select{
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  height: 128rpx;
  background: #FFFFFF;
  border-top: 1px solid #E8E8E8;
  line-height: 128rpx;
  z-index: 22
}
.monit_select .select{
  padding-left: 100rpx
}
.monit_select .select text{
  margin-top: 4rpx;
  display: inline-block
}
.monit_select .monit_cancel{
  width:240rpx;
  height:92rpx;
  background:linear-gradient(180deg,rgba(231,93,40,1) 0%,rgba(233,68,68,1) 100%);
  box-shadow:4rpx 4rpx 8rpx 0px rgba(198,55,35,0.48);
  display: inline-block;
  color: #FFFFFF;
  border-radius:46rpx;
  line-height: 92rpx;
  text-align: center;
  position: absolute;
  right: 28rpx;
  top:50%;
  margin-top: -46rpx;
  font-size: 28rpx;
}
.monit_select .uniE930 {
  display: inline-block;
  width: 40rpx;
  height: 40rpx;
  color: #fff;
  line-height: 44rpx;
  font-size: 20rpx;
  text-align: center;
  background-color: #fff;
  border: 2rpx solid #e75d28;
  border-radius: 8rpx;
  position: absolute;
  left: 28rpx;
  top:50%;
  margin-top: -20rpx;
}

.monit_select .active{
  color: #FFFFFF;
  background-color: #E75D28;
  border:none;
  width: 42rpx;
  height: 42rpx;
}