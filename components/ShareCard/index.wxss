@import '../../assets/styles/font.wxss';

.container {
  position: fixed;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  display: flex;
  z-index: 999;
  display: flex;
  align-items: center;
  justify-content: center;
}

.overlay {
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  position: fixed;
  background-color: rgba(0, 0, 0, 0.5);
}

.wrapper {
  height: 400rpx;
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 33;
}
.wrapper .header {
  height: 88rpx;
  background-color: #f7f7f7;
  display: flex;
  align-items: center;
  justify-content: center;
  border-top-left-radius: 36rpx;
  border-top-right-radius: 36rpx;
  color: #1d1d1d;
  position: relative;
  font-size: 28rpx;
  font-weight: 400;
}
.wrapper .header .close-button {
  position: absolute;
  font-size: 28rpx;
  right: 0;
  color: #bec3cd;
  top: 0;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 0 44rpx;
  height: 100%;
}
.wrapper .share-content {
  height: 312rpx;
  background-color: #fff;
  display: flex;
  align-items: center;
  justify-content: center;
  width: 100%;
}
.wrapper .share-content .share-list {
  display: flex;
}
.wrapper .share-content .share-list .share-item {
  display: flex;
  flex-direction: column;
  border: none;
  background-color: transparent;
  padding: 0;
}
.wrapper .share-content .share-list .share-item::after {
  position: absolute;
  opacity: 0;
  top: -9999999px;
}
.wrapper .share-content .share-list .share-item .share-icon {
  height: 136rpx;
  width: 136rpx;
  border-radius: 68rpx;
  background-color: #f7f7f7;
  color: #75e696;
  font-size: 72rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}
.wrapper .share-content .share-list .share-item .share-text {
  font-size: 28rpx;
  font-weight: 400;
  color: #1d1d1d;
  line-height: 40rpx;
  margin-top: 20rpx;
  text-align: center;
}

.dialog-content {
  width: 75%;
  background-color: #fff;
  border-radius: 16rpx;
  box-sizing: border-box;
  padding: 0 60rpx;
  display: flex;
  flex-direction: column;
  height: 420rpx;
  position: relative;
  z-index: 1001;
}
.dialog-content .title {
  font-size: 36rpx;
  font-weight: 500;
  color: #1d1d1d;
  height: 120rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-bottom: solid 2px #0dc160;
}
.dialog-content .message {
  font-size: 28rpx;
  font-weight: 400;
  color: #93989f;
  line-height: 40rpx;
  margin-top: 40rpx;
}
.dialog-content .cancel-button {
  width: 200rpx;
  height: 76rpx;
  background-color: #f3f3f3;
  color: #0dc160;
  display: flex;
  align-items: center;
  justify-content: center;
}
.dialog-content .confirm-button {
  background-color: #0dc160;
  color: #fff;
  width: 200rpx;
  height: 76rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}
.dialog-content .button-wrapper {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-top: auto;
  margin-bottom: 36rpx;
  font-size: 28rpx;
}