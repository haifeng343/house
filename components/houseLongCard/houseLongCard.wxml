<view wx:if="{{type!=1}}">
  <movable-area class="area">
    <movable-view class="wrapper" direction="horizontal" inertia="true" x="{{x}}" out-of-bounds="true" damping="100" bindchange="handleMovableChange" bindtouchend="handleTouchend">
      <view class="card">
        <view class="card_image">
          <imageExtend src="{{item.imgurl}}" rentType="{{2}}" data-idx="{{idx}}"></imageExtend>
        </view>
        <view class="card_words">
          <view class="title">{{item.housetitle}}</view>
          <view class="room">{{item.introduce}}</view>
          <view class="address"><image src="../../assets/image/location_red.png"></image><text>{{item.address}}</text></view>
          <view class="label">
            <block wx:for="{{item.tagwall}}" wx:key="{{index}}" wx:for-item="itemTag">
              <text>{{itemTag}}</text>
            </block>
          </view>
        </view>
        <view class="classify" wx:if="{{item.platformId == 'wiwj'}}">我爱我家</view>
        <view class="classify" wx:if="{{item.platformId == 'lj'}}">贝壳</view>
        <view class="classify" wx:if="{{item.platformId == 'ftx'}}">房天下</view>
        <view class="classify" wx:if="{{item.platformId == 'wbtc'}}">58同城</view>
        <view class="price">
          <text>¥{{item.price}}/月</text>
          <view class="triangle"></view>
        </view>
      </view>
    </movable-view>
  </movable-area>
  <view class="remove">
    <view>
      <image src="../../assets/image/no_attention.png"></image>
      <view>不</view>
      <view>再</view>
      <view>关</view>
      <view>注</view>
    </view>
  </view>
</view>
<view wx:else>
  <view class="card {{bottom?'':'card_none'}}">
    <view class="card_image">
      <imageExtend src="{{item.imgurl}}" rentType="{{2}}" data-idx="{{idx}}"></imageExtend>
    </view>
    <view class="card_words">
      <view class="title">{{item.housetitle}}</view>
      <view class="room">{{item.introduce}}</view>
      <view class="address"><image src="../../assets/image/location_red.png"></image><text>{{item.address}}</text></view>
      <view class="label">
        <block wx:for="{{item.tagwall}}" wx:key="{{index}}" wx:for-item="itemTag">
          <text>{{itemTag}}</text>
        </block>
      </view>
    </view>
    <view class="classify" wx:if="{{item.platformId == 'wiwj'}}">我爱我家</view>
    <view class="classify" wx:if="{{item.platformId == 'lianjia'}}">贝壳</view>
    <view class="classify" wx:if="{{item.platformId == 'fangtianxia'}}">房天下</view>
    <view class="classify" wx:if="{{item.platformId == 'wbtc'}}">58同城</view>
    <image class="star" wx:if="{{collect&&item.collection}}" data-collection="{{item.collection}}" data-index="{{idx}}" data-productId="{{item.sqid}}" catchtap="goToCollection" src="../../assets/image/star_select.png"></image>
        <image class="star" wx:if="{{collect&&!item.collection}}" data-index="{{idx}}" data-collection="{{item.collection}}" data-productId="{{item.sqid}}" catchtap="goToCollection" src="../../assets/image/star.png"></image>
    <view class="price">
      <text>¥{{item.price}}/月</text>
      <view class="triangle"></view>
    </view>
  </view>
</view>
