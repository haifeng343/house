@import '../../assets/styles/font.wxss';
.move{position: relative;width: calc(100%);height: 286rpx;}
.card{display: flex;padding: 32rpx 0;margin:0 30rpx;border-bottom: 1px solid #E8E8E8;height: 220rpx;position: relative}
.card_none{border-bottom: none}
.area{
  width: calc(100% - 114px);
  height: 286rpx;
  margin: 0 auto;
  position: absolute;
  left: 50px;
  top: 0
}
.green{
  background:linear-gradient(180deg,rgba(18,190,139,1) 0%,rgba(0,191,87,1) 100%)!important;
}
.wrapper {
  width: calc(100vw);
  height: 286rpx;
  position: relative;
  overflow: hidden;
  z-index: 2;
  background: #ffffff;
  margin-left: -50px
}
.card .card_image{width: 252rpx;}
.card_image image{width: 220rpx;height: 220rpx;}
.card .card_words{flex: 1;}
.card_words .title{
  font-size: 32rpx;
  font-weight:bold;
  color: #1D1D1D;
  overflow:hidden;
  text-overflow:ellipsis; 
  white-space: nowrap;
  margin-bottom: 10rpx;
  width: 420rpx;
  height: 36rpx;
  line-height: 36rpx;
}
.card_words .room{font-size: 24rpx;color: #474747;margin-bottom: 10rpx;}
.card_words .address{font-size: 24rpx;color: #FF6363;margin-bottom: 10rpx;}
.card_words .address image{width: 20rpx;height:26rpx;vertical-align: middle;margin-right: 10rpx;}
.card_words .address text{line-height: 34rpx;vertical-align: middle;}
.card_words .label{height: 44rpx;overflow:hidden;}
.card_words .label text{
  display: inline-block;
  font-size: 20rpx;
  color: #F1612A;
  padding: 2rpx 8rpx;
  margin-right: 8rpx;
  border-radius: 22rpx;
  background: rgba(241,97,42,0.1);
}
.card_words .card_price{color: #F1612A;line-height:40rpx;display: inline-block;margin-right: 12rpx;}
.card_words .card_price .p{font-size: 40rpx;}
.card_words .card_price .m{font-size: 24rpx;}
.card_words .card_price .u{font-size: 24rpx;color: #a6a6a6;margin-left: 10rpx;}
.card_words .card_newprice{display: inline-block}
.card_words .card_newprice .uniE968{
  font-size:14rpx;
  width: 12rpx;
  height: 10rpx;
  margin: 0 4rpx 0 10rpx;
}
.card_words .card_newprice .uniE967{
  font-size:14rpx;
  width: 10rpx;
  height: 14rpx;
  margin: 0 4rpx 0 10rpx;
}
.card_words .card_newprice .newLevel{
  display: inline-block;
  height:32rpx;
  padding: 0 8rpx 0 0;
  background:linear-gradient(180deg,rgba(253,185,138,1) 0%,rgba(247,107,28,1) 100%);
  border-radius:82rpx 82rpx 82rpx 0;
  font-size:20rpx;
  line-height:32rpx;
  color: #FFFFFF;
  margin-right: 6rpx
}
.card .card_star{
  position: absolute;
  top: 0;
  right: -30rpx;
  z-index: 7;
  width: 100rpx;
  height: 140rpx;
}
.card .star {
  position: absolute;
  top: 28rpx;
  right: 30rpx;
  z-index: 7;
  width: 44rpx;
  height: 44rpx;
}
.card .star_select{
  width: 40rpx;
  height: 40rpx;
}
.card .classify {
  position: absolute;
  top: 40rpx;
  left: 0;
  width: 120rpx;
  height: 38rpx;
  color: #fff;
  text-align: center;
  border-radius: 8rpx 0 8rpx 0;
  line-height: 38rpx;
  font-size: 28rpx;
  z-index: 7
}
.card .image image{width: 86rpx;height:34rpx}
.card .price {
  position: absolute;
  left: -8rpx;
  top: 180rpx;
  width: auto;
  height: 50rpx;
  color: #fff;
  font-size: 32rpx;
  line-height: 50rpx;
  text-align: center;
  padding: 0 20rpx;
  background:linear-gradient(180deg,rgba(231,93,40,1) 0%,rgba(233,68,68,1) 100%);
  border-radius: 4rpx 6rpx 6rpx 0;
  opacity:0.95;
  z-index: 7
}

.card .price .triangle {
  position: absolute;
  left: -4rpx;
  top: 50rpx;
  width: 0;
  height: 0;
  border: 8rpx solid;
  margin-left: 4rpx; 
  border-right: 0;
  border-color: #941200 transparent transparent transparent;
}
.remove{  
  width: 64px; 
  height: 284rpx; 
  position: absolute;  
  top: 0;  
  right: 0;  
  display: flex;  
  justify-content: center;  
  align-items: center;
  background: rgb(243, 243, 243);
  z-index: 1
}  
.remove image{width: 32rpx;height:32rpx;margin-left: -2rpx}
.remove view{
  font-size:28rpx;
  font-weight:400;
  color:rgba(241,97,42,1);
  line-height:36rpx;
}
.select{
  width: 50px; 
  height: 286rpx; 
  position: absolute;  
  top: 0;  
  left: 0;  
  display: flex;  
  justify-content: center;  
  align-items: center;
  z-index: 11
}
.select .uniE930 {
  display: inline-block;
  width: 40rpx;
  height: 40rpx;
  color: #fff;
  line-height: 44rpx;
  font-size: 20rpx;
  text-align: center;
  background-color: #fff;
  border: 2rpx solid #e75d28;
  border-radius: 42rpx;
}
.select .active{
  color: #FFFFFF;
  background-color: #E75D28;
  border:none;
  width: 42rpx;
  height: 42rpx;
}
