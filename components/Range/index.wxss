@import '../../assets/styles/font.wxss';

:host {
  display: flex;
  align-items: center;
  flex-direction: column;
  width: 650rpx;
}

.container {
  position: relative;
  height: 155rpx;
  width: 626rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.background-line {
  height: 6px;
  width: 570rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  box-sizing: border-box;
  border: 1px solid #1d1d1d;
  position: relative;
}

.distance {
  top: -1px;
  height: 6px;
  position: absolute;
  background-color: #e75d28;
  z-index: 9;
}

.move-view {
  width: 56rpx;
  height: 56rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 33;
  left: 0;
  top: 52rpx;
  position: absolute;
}

.price {
  position: absolute;
  top: -48rpx;
  left: 50%;
  transform: translateY(-50%) translateX(-50%);
  font-size: 28rpx;
  color: #f1612a;
  font-weight: 500;
}

.block {
  width: 56rpx;
  height: 56rpx;
  position: relative;
  color: #fff;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 50%;
  background-color: #fff;
  border: 6rpx solid rgba(29, 29, 29, 1);
  box-sizing: border-box;
  box-shadow: 0rpx 2rpx 6rpx 0rpx rgba(0, 0, 0, 0.23);
}

.block text {
  color: #e75d28;
  font-size: 20rpx;
  position: relative;
}

.price-left {
  position: absolute;
  left: 0;
  bottom: -68rpx;
  transform: translateX(-50%);
  font-size: 28rpx;
  font-weight: 400;
  color: #1d1d1d;
}

.price-right {
  position: absolute;
  right: 0;
  bottom: -68rpx;
  transform: translateX(50%);
  font-size: 28rpx;
  font-weight: 400;
  color: #1d1d1d;
}

.input-container {
  margin-top: 20rpx;
  display: flex;
  flex-direction: column;
  width: 100%;
}

.title-wrapper {
  display: flex;
  font-size: 28rpx;
  font-weight: 400;
}

.title {
  color: #1d1d1d;
}

.sub-title {
  color: #bec3cd;
  margin-left: 12rpx;
}

.input-wrapper {
  display: flex;
  align-items: center;
  width: 100%;
  justify-content: space-between;
  margin-top: 24rpx;
}

input {
  width: 276rpx;
  height: 80rpx;
  box-sizing: border-box;
  border: solid 2rpx #e9e9e9;
  text-align: center;
  color: #1d1d1d;
  font-weight: 500;
  font-size: 32rpx;
}

.input-placeholder {
  color: #bec3cd;
  font-weight: 400;
}

.hidden {
  opacity: 0;
}

.point-right {
  position: absolute;
  width: 20rpx;
  height: 20rpx;
  border-radius: 50%;
  box-sizing: border-box;
  border: solid 2rpx #1d1d1d;
  right: 0;
  transform: translateX(50%) translateY(-50%);
  background-color: #fff;
  top: 4rpx;
}

.point-left {
  position: absolute;
  width: 20rpx;
  height: 20rpx;
  border-radius: 50%;
  box-sizing: border-box;
  border: solid 2rpx #1d1d1d;
  left: 0;
  transform: translateX(-50%) translateY(-50%);
  background-color: #fff;
  top: 4rpx;
}
