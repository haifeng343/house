@import "../../assets/styles/font.wxss";

:host {
  display: flex;
  height: 120rpx;
  align-items: center;
}

.container {
  position: relative;
  height: 4px;
  width: 648rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-top: 40rpx;
}

.container.hidden {
  opacity: 0;
}

.scale {
  position: absolute;
  top: 5px;
  width: 80rpx;
  transform: translateY(-100%) translateX(-50%);
  z-index: 33;
}

.scale .text {
  color: #1d1d1d;
  font-size: 28rpx;
  font-weight: 400;
  white-space: nowrap;
  width: 80rpx;
  display: flex;
  justify-content: center;
}

.scale .icon {
  width: 8px;
  height: 8px;
  box-sizing: border-box;
  border: 2rpx solid rgb(29, 29, 29);
  border-radius: 50%;
  margin-top: 30rpx;
  transform: translateX(32rpx);
  background-color: #fff;
}

.scale .icon.active {
  background-color: #da4e3a;
  border-color: #da4e3a;
}

.background-line {
  height: 4px;
  width: 600rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  box-sizing: border-box;
  border: 1px solid #1d1d1d;
  position: relative;
}

.distance {
  top: -1px;
  height: 4px;
  position: absolute;
  background-color: #e75d28;
  z-index: 9;
}

.move-view {
  width: 48rpx;
  height: 48rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 33;
  left: 0;
  top: -20rpx;
  position: absolute;
}

.block {
  width: 48rpx;
  height: 48rpx;
  position: relative;
  color: #fff;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 50%;
  background-color: #fff;
  border: solid 2px #1d1d1d;
  box-sizing: border-box;
}

.block text {
  color: #e75d28;
  font-size: 20rpx;
  position: relative;
}
