@import "/app.wxss";
.mask{
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  width: 100%;
  height: 100%;
  background: rgba(0,0,0,0.5);
  display: flex;
  justify-content: center;
  z-index: 201
}
.house_image{display: flex;align-items: center;justify-content: center}
.mask_content{
  margin-top: 300rpx;
  height: 386rpx;
}

.mask_content .house_image .image{
  width: 76rpx;
  height: 80rpx;
}
.mask_content .content{
  width: 624rpx;
  height: 256rpx;
  background: #FFFFFF;
  border-radius:  0 0 16rpx 16rpx;
}
.mask_content .contents{height: 256rpx;}
.mask_content .content .text{
  font-size: 32rpx;
  height: 150rpx;
  color: #1D1D1D;
  margin: 0 52rpx;
  display: flex;
  align-items: center;
  text-indent:32rpx;
  justify-content: center
}
.content .btn{
  display: flex
}
.content .btn text{
  flex: 1;
  text-align: center;
  border-top: 1rpx solid #F2E9E6;
  height: 105rpx;
  line-height: 105rpx;
  color: #1D1D1D;
  font-weight: bold
}
.content .btn .right{
  color: #F1612A;
  border-left: 1rpx solid #F2E9E6;
}

.mask_content .content .btns{
  width: 272rpx;
  height: 92rpx;
  background:linear-gradient(180deg,rgba(231,93,40,1) 0%,rgba(233,68,68,1) 100%);
  box-shadow:4rpx 4rpx 8rpx 0px rgba(198,55,35,0.75);
  color: #FFFFFF;
  margin: 24rpx auto 0;
  border-radius: 46rpx;
  text-align: center;
  line-height: 92rpx;
}