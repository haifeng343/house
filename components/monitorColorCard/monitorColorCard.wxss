.monitor_card{
  position: relative;
  width: 100%;
  height: 312rpx;
  color: #FFFFFF;
  display: flex;
  align-items: center;
}
.area {
  width: calc(100% - 67px);
  height: 312rpx;
}
.wrapper {
  width: calc(100vw - 16rpx);
  height: 312rpx;
  position: relative;
  overflow: hidden;
  z-index: 2;
}
.red_bg{
  width: 100%;
  height: 312rpx;
  background-repeat:no-repeat; 
  background-size:100% 100%;
  background-image:url('https://piaodingding.oss-cn-hangzhou.aliyuncs.com/images/wechat/fdd/monitor_red_card.png');
  position: absolute;
  top: 0;
  left: 0;
  z-index: 2
}
.dred_bg{
  position: absolute;
  top: 8rpx;
  left: 8rpx;
  right:16rpx;
  bottom: 16rpx;
  border-radius: 16rpx;
  background-color: #EB755F;
}
.green_bg{
  width: 100%;
  height: 312rpx;
  background-repeat:no-repeat; 
  background-size:100% 100%;
  background-image:url('https://piaodingding.oss-cn-hangzhou.aliyuncs.com/images/wechat/fdd/monitor_green_card.png');
  position: absolute;
  top: 0;
  left: 0;
  z-index: 2
}
.dgreen_bg{
  position: absolute;
  top: 8rpx;
  left: 8rpx;
  right:16rpx;
  bottom: 16rpx;
  border-radius: 16rpx;
  background-color: #2FC8AE;
}
.monitor_card .card_content{
  position: relative;
  z-index: 3
}

.monitor_card .card_message{
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx 18rpx 0 44rpx;
}
.monitor_long_card .card_message{margin-bottom: 16rpx;padding-top: 28rpx;}
.monitor_card .card_date{
  width: 140rpx;
  font-size: 28rpx;
}
.monitor_card .card_address{
  width: 300rpx;
  font-size: 56rpx;
  display: flex;
  justify-content: flex-start;
  align-items: center;
}
.monitor_long_card .card_address{
  width: 480rpx;
}
.monitor_card .card_address .text {
  overflow: hidden;
  text-overflow:ellipsis;
  white-space: nowrap;
  margin-right: 16rpx;
}
.monitor_card .card_address .type{
  font-size:24rpx;
  border: 1px solid #FFFFFF;
  padding: 6rpx 14rpx;
  margin-right: 10rpx;
  border-radius: 22rpx;
  margin-top: 10rpx;
}
.monitor_card .card_budget{
  flex: 1;
  font-size: 28rpx;
  text-align: right;
  margin-right: 20rpx;
}
.monitor_card .past_card,.monitor_card .card_search{margin-top: 10rpx;}
.card_budget .card_money .money{font-size: 60rpx;}
.card_search .card_money .money{font-size: 40rpx;}
.past_card .card_money .money{font-size: 40rpx;}
.monitor_card .card_money .money{text-shadow:0px 1px 3px rgba(0,135,124,1);}
.monitor_red_card .card_money .money{text-shadow:0px 1px 3px rgba(215,55,55,1);}
.card_budget .card_down_money{
  margin-top: -12rpx;
}
.past_card .card_down_money,.card_search .card_down_money{
  margin-top: 0;
}

.monitor_card .card_total{font-size: 32rpx;padding-left: 82rpx;position: relative;}
.monitor_card .card_total .location{width: 600rpx;}
.monitor_long_card .card_total{display: flex}
.monitor_long_card .card_total .location{width: 300rpx;}
.monitor_long_card .card_total .card_price{flex: 1;text-align: right;margin-right: 38rpx;}
.monitor_card .card_total .card_location{
  width: 24rpx;
  height: 32rpx;
  position: absolute;
  left: 44rpx;
  top: 50%;
  margin-top: -16rpx;
}
.monitor_card .card_total view{
  overflow: hidden;
  text-overflow:ellipsis;
  white-space: nowrap;
}
.monitor_card .card_line{
  padding: 0 44rpx;
}
.monitor_card .card_line .line{
  width: 100%;
  height: 1rpx;
  background: #FFFFFF;
  margin-top: 20rpx;
}
.card_time .romm_num{
  background: #FFFFFF;
  color: #5CD6B6;
  text-align: center;
  display: inline-block;
  padding: 0 8rpx;
}
.monitor_red_card .card_time .romm_num{
  color: #DA4E3A
}
.monitor_card .card_time{
  font-size: 28rpx;
  padding-left: 44rpx;
  margin-top: 30rpx;
  position: relative;
}
.card_time .detail_btn{
  width: 192rpx;
  height: 64rpx;
  color: #10BCAE;
  text-align: center;
  background: #FFFFFF;
  display: inline-block;
  line-height: 64rpx;
  border-radius: 32rpx;
  position: absolute;
  top: 50%;
  margin-top: -32rpx;
  right: 30rpx;
}

.monitor_red_card .card_time .detail_btn{
  color: #DA4E3A
}
.card_time .time_monitor{
  width: 44rpx;
  height: 44rpx;
  position: absolute;
  top: 50%;
  margin-top: -22rpx;
  animation: headRotate 1s linear infinite
}
@keyframes headRotate{
  0% {transform: rotate(0deg);}
  50% {transform: rotate(180deg);}
  100% {transform: rotate(360deg);}
}
.card_time .time_text{
  padding-left: 64rpx;
}
.card_time .time_text text{
  margin-right: 8rpx;
}
.card_time .time_text .pay_money{
  background: #D6D6D6;
  height: 44rpx;
  display: inline-block;
  text-align: center;
  line-height: 44rpx;
  border-radius: 4rpx;
  padding: 0 14rpx;
}
.card_time .time_line{
  /* text-decoration: underline */
}

.remove{  
  width: 67px;  
  height: 100%;  
  position: absolute;  
  top: 0;  
  right: 0;  
  display: flex;  
  justify-content: center;  
  align-items: center;
}  
.remove image{width: 42rpx;height:44rpx}

