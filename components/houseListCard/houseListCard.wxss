@import '../../assets/styles/font.wxss';
.house_card {
  margin: 0 28rpx 20px;
  position: relative;
  border-bottom: 1rpx solid #e8e8e8;
  padding-bottom: 20rpx;
}
.house_area{
  width: calc(100%);
  height: 520rpx;
  position: relative;
}
.area{
  /* width: calc(100% - 67px); */
  width: calc(100% - 105px);
  height: 520rpx;
  position: absolute;
  left: 38px;
  top: 0
  /* margin-left: 38px */
}
.wrapper {
  width: calc(100vw - 56rpx);
  height: 520rpx;
  position: relative;
  overflow: hidden;
  z-index: 2;
  background: #ffffff;
  margin-left: -38px;
}
.house_card .swiper {
  height: 360rpx;
}
.house_card .card_star{
  width: 140rpx;
  height: 140rpx;
  position: absolute;
  top: 0;
  right: 0;
  z-index: 7
}
.house_card .star {
  width: 44rpx;
  height: 44rpx;
  position: absolute;
  top: 24rpx;
  right: 24rpx;
}

.house_card .star_select{
  width: 40rpx;
  height: 40rpx;
}
.house_card .house_classify {
  position: absolute;
  top: 0;
  left: 0;
  width: 92rpx;
  height: 48rpx;
  background-color: rgba(0, 0, 0, 0.3);
  color: #fff;
  text-align: center;
  border-radius: 8rpx 0 8rpx 0;
  line-height: 48rpx;
  z-index: 7
}

.house_card .house_swiper {
  position: absolute;
  top: 310rpx;
  right: 42rpx;
  width: 68rpx;
  height: 30rpx;
  background-color: rgba(0, 0, 0, 0.7);
  color: #fff;
  text-align: center;
  border-radius: 16rpx;
  font-size: 24rpx;
  line-height: 30rpx;
}

.house_card .house_price {
  position: absolute;
  left: -8rpx;
  top: 290rpx;
  width: auto;
  height: 58rpx;
  color: #fff;
  font-size: 32rpx;
  line-height: 50rpx;
  text-align: center;
  padding: 0 20rpx;
  background:linear-gradient(180deg,rgba(231,93,40,1) 0%,rgba(233,68,68,1) 100%);
  border-radius: 4rpx 6rpx 6rpx 0;
  opacity:0.95;
  z-index: 7
}

.house_card .house_price .triangle {
  position: absolute;
  left: -4rpx;
  top: 58rpx;
  width: 0;
  height: 0;
  border: 8rpx solid;
  margin-left: 4rpx; 
  border-right: 0;
  border-color: #941200 transparent transparent transparent;
}

.house_bottom {
  display: flex;
  margin-top: 22rpx;
}

.house_bottom .house_message {
  flex: 1;
}

.house_bottom .house_photo {
  width: 100rpx;
}

.house_card .house_name {
  display: flex;
  align-items: center;
  font-size: 32rpx;
  color: #1d1d1d;
  margin-bottom: 6rpx;
  font-weight: bold;
}

.house_card .house_name text {
  width: 554rpx;
  text-overflow: ellipsis;
  overflow: hidden;
  white-space: nowrap;
}

.house_card .hotel {
  width: 40rpx;
  height: 42rpx;
  margin-right: 10rpx;
}

.house_card .house_type {
  font-size: 24rpx;
  color: #474747;
  display: flex;
  align-items: center;
}
.house_card .house_tag {
  height: 34rpx;
}
.house_card .house_tag text{
  width: 110rpx;
  height: 34rpx;
  color: #FF6363;
  border:2rpx solid #FF6363;
  box-sizing: border-box;
  border-radius: 18rpx;
  font-size: 20rpx;
  margin-top: 8rpx;
  text-align: center;
  line-height: 30rpx;
  display: inline-block;
  margin-right: 20rpx;
}
.house_card .house_tag .discount{
  width: 140rpx;
}
.house_card .distance {
  width: 26rpx;
  height: 26rpx;
}

.house_photo {
  display: flex;
  align-items: center;
  justify-content: flex-end;
}

.house_photo .photo {
  width: 80rpx;
  height: 80rpx;
  border-radius: 40rpx;
}

.remove{  
  width: 67px; 
  height: 360rpx; 
  position: absolute;  
  top: 0;  
  right: 0;  
  display: flex;  
  justify-content: center;  
  align-items: center;
  background: rgb(243, 243, 243);
  z-index: 1
}  
.remove image{width: 32rpx;height:32rpx;margin-left: -2rpx}
.remove view{
  font-size:28rpx;
  font-weight:400;
  color:rgba(241,97,42,1);
  line-height:36rpx;
}
.select{
  width: 38px; 
  height: 360rpx; 
  position: absolute;  
  top: 0;  
  left: 0;  
  display: flex;  
  /* justify-content: center;   */
  align-items: center;
  z-index: 11
}
.select .uniE930 {
  display: inline-block;
  width: 40rpx;
  height: 40rpx;
  color: #fff;
  line-height: 44rpx;
  font-size: 20rpx;
  text-align: center;
  background-color: #fff;
  border: 2rpx solid #e75d28;
  border-radius: 42rpx;
}
.select .active{
  color: #FFFFFF;
  background-color: #E75D28;
  border:none;
  width: 42rpx;
  height: 42rpx;
}