.container {
    position: fixed;
    top: 0;
    right: 0;
    bottom: 0;
    left: 0;
    display: flex;
    align-items: center;
    justify-content: center;
    z-index: 999;
  }
  
  .overlay {
    top: 0;
    right: 0;
    bottom: 0;
    left: 0;
    position: fixed;
    background-color: rgba(0, 0, 0, 0.5);
  }
  
  .dialog-wrapper {
    width: 75%;
    background-color: #fff;
    border-radius: 16rpx;
    box-sizing: border-box;
    padding: 0 60rpx;
    display: flex;
    flex-direction: column;
    height: 420rpx;
    position: relative;
    z-index: 1001;
  }
  .dialog-wrapper .title {
    font-size: 36rpx;
    font-weight: 500;
    color: #1d1d1d;
    height: 120rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    border-bottom: solid 2px #E75D28;
  }
  .dialog-wrapper .message {
    font-size: 28rpx;
    font-weight: 400;
    color: #93989f;
    line-height: 40rpx;
    margin-top: 40rpx;
  }
  .dialog-wrapper .cancel-button {
    width: 200rpx;
    height: 76rpx;
    background-color: #f3f3f3;
    color: #E75D28;
    display: flex;
    align-items: center;
    justify-content: center;
  }
  .dialog-wrapper .confirm-button {
    background-color: #E75D28;
    color: #fff;
    width: 200rpx;
    height: 76rpx;
    display: flex;
    align-items: center;
    justify-content: center;
  }
  .dialog-wrapper .button-wrapper {
    display: flex;
    align-items: center;
    justify-content: space-between;
    margin-top: auto;
    margin-bottom: 36rpx;
    font-size: 28rpx;
  }