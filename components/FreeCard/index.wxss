@import "../../assets/styles/font.wxss";

.container {
  width: 660rpx;
  height: 260rpx;
  background-repeat: no-repeat;
  background-size: 660rpx 260rpx;
  background-image: url("https://piaodingding.oss-cn-hangzhou.aliyuncs.com/images/wechat/体验卡背景-默认.png");
  display: flex;
  flex-direction: column;
  position: relative;
  overflow: hidden;
}
.container.hidden {
  opacity: 0 !important;
}
.container.disabled {
  background-image: url("https://piaodingding.oss-cn-hangzhou.aliyuncs.com/images/wechat/体验卡背景-禁用-默认.png");
}
.container.disabled .top .name,
.container.disabled .top .desc {
  color: #fff;
}
.container.disabled .top .expire {
  color: #e0e0e0;
  background-color: #f6f6f6;
}
.container.disabled .bottom {
  color: #fff;
}
.container.activity {
  background-image: url("https://piaodingding.oss-cn-hangzhou.aliyuncs.com/images/wechat/ChunJie/体验卡背景-春节.png");
}
.container.activity.disabled {
  background-image: url("https://piaodingding.oss-cn-hangzhou.aliyuncs.com/images/wechat/ChunJie/体验卡背景-禁用-春节.png");
}
.container.activity.disabled .top .name {
  color: #ffffff;
}
.container.activity.disabled .top .desc {
  color: #ffffff;
}
.container.activity.disabled .top .expire {
  background-color: #f6f6f6;
  color: #e0e0e0;
}
.container.activity.disabled .bottom {
  color: #fff;
}
.container.activity .top .name {
  color: #fff796;
}
.container.activity .top .desc {
  color: #ffe296;
}
.container.activity .top .expire {
  background-color: #fff796;
  color: #c80005;
}
.container.activity .bottom {
  color: #fff;
}
.container .water-mask {
  position: absolute;
  font-size: 146rpx;
  color: #bebebe;
  top: 80rpx;
  right: 44rpx;
  z-index: 99;
}
.container .top {
  padding-left: 120rpx;
  padding-top: 28rpx;
  box-sizing: border-box;
  position: relative;
  z-index: 22;
}
.container .top .name {
  display: flex;
  align-items: center;
  color: #464646;
  font-size: 56rpx;
  line-height: 64rpx;
  white-space: nowrap;
}
.container .top .name .day {
  font-weight: 600;
  margin-right: 16rpx;
}
.container .top .desc {
  font-size: 28rpx;
  font-weight: 400;
  color: #a9885d;
  line-height: 40rpx;
  height: 40rpx;
  margin-bottom: 4rpx;
  white-space: nowrap;
}
.container .top .expire {
  background-color: #e3caae;
  width: 260rpx;
  height: 36rpx;
  line-height: 36rpx;
  font-size: 24rpx;
  font-weight: 400;
  color: #464646;
  white-space: nowrap;
  box-sizing: border-box;
  padding-left: 12rpx;
  margin-bottom: 20rpx;
}
.container .bottom {
  display: flex;
  flex: 1 1 auto;
  align-items: center;
  justify-content: flex-end;
  font-size: 24rpx;
  color: #464646;
  margin-right: 40rpx;
  position: relative;
  overflow: hidden;
  z-index: 22;
}
