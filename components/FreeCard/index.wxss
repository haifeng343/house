@import '../../assets/styles/font.wxss';
@charset "UTF-8";
.container {
  width: 658rpx;
  height: 312rpx;
  background-repeat: no-repeat;
  background-size: 658rpx 312rpx;
  background-image: url("https://piaodingding.oss-cn-hangzhou.aliyuncs.com/images/wechat/体验卡背景.png");
  display: flex;
  flex-direction: column;
  position: relative;
  overflow: hidden;
}
.container.hidden {
  opacity: 0 !important;
}
.container.disabled {
  background-image: url("https://piaodingding.oss-cn-hangzhou.aliyuncs.com/images/wechat/体验卡背景禁用.png");
}
.container.disabled .top .name,
.container.disabled .top .desc {
  color: #fff;
}
.container.disabled .top .expire {
  color: #e0e0e0;
  background-color: #f6f6f6;
}
.container.disabled .bottom {
  color: #fff;
}
.container .water-mask {
  position: absolute;
  font-size: 146rpx;
  color: #bebebe;
  top: 80rpx;
  right: 44rpx;
  z-index: 99;
}
.container .top {
  padding-left: 132rpx;
  padding-top: 48rpx;
  box-sizing: border-box;
  position: relative;
  z-index: 22;
}
.container .top .name {
  display: flex;
  align-items: center;
  color: #464646;
  font-size: 56rpx;
  line-height: 64rpx;
  white-space: nowrap;
}
.container .top .name .day {
  font-weight: 600;
  margin-right: 16rpx;
}
.container .top .desc {
  margin-top: 4rpx;
  font-size: 32rpx;
  font-weight: 400;
  color: #a9885d;
  line-height: 44rpx;
  margin-bottom: 8rpx;
  white-space: nowrap;
}
.container .top .expire {
  background-color: #e3caae;
  width: 260rpx;
  height: 36rpx;
  line-height: 36rpx;
  font-size: 24rpx;
  font-weight: 400;
  color: #464646;
  white-space: nowrap;
  box-sizing: border-box;
  padding-left: 12rpx;
  margin-bottom: 36rpx;
}
.container .bottom {
  display: flex;
  flex: 1 1 auto;
  align-items: center;
  justify-content: flex-end;
  font-size: 24rpx;
  color: #464646;
  margin-right: 40rpx;
  position: relative;
  overflow: hidden;
  z-index: 22;
}