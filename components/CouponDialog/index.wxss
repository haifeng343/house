@import "../../assets/styles/font.wxss";
@import "../../assets/styles/flex.wxss";

.container {
  position: fixed;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 999;
}

.overlay {
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  position: fixed;
  background-color: rgba(0, 0, 0, 0.5);
}

.dialog-wrapper {
  position: relative;
  z-index: 1001;
  width: 580rpx;
  display: flex;
  flex-direction: column;
  border-radius: 60rpx 60rpx 16rpx 16rpx;
  background-color: #fff;
}
.dialog-wrapper .bg {
  width: 594rpx;
  height: 248rpx;
  position: absolute;
  left: -14rpx;
  top: -130rpx;
}
.dialog-wrapper .bg1 {
  position: absolute;
  width: 170rpx;
  height: 170rpx;
  bottom: -48rpx;
  right: -48rpx;
}
.dialog-wrapper .bg2 {
  position: absolute;
  left: -72rpx;
  bottom: -40rpx;
  width: 238rpx;
  height: 244rpx;
}
.dialog-wrapper .close-button {
  bottom: -108rpx;
  color: #fff;
  font-size: 68rpx;
  position: absolute;
  left: 50%;
  transform: translateX(-50%);
}
.dialog-wrapper .content {
  display: flex;
  flex-direction: column;
  width: 100%;
  overflow: hidden;
  position: relative;
}
.dialog-wrapper .content .title {
  font-size: 48rpx;
  line-height: 64rpx;
  font-weight: 500;
  color: #4a4a4a;
  text-align: center;
  margin-top: 120rpx;
  flex: 0 0 auto;
}
.dialog-wrapper .content > .message {
  font-size: 28rpx;
  font-weight: 400;
  color: #bec3cd;
  line-height: 44rpx;
  text-align: center;
  display: flex;
  align-items: center;
  justify-content: center;
  position: relative;
  margin: 0 40rpx;
  flex: 0 0 auto;
}
.dialog-wrapper .content > .message::after {
  content: "";
  height: 1px;
  background-color: #f0f0f0;
  width: 100%;
  position: absolute;
  top: 50%;
  left: 0;
}
.dialog-wrapper .content > .message .message-text {
  padding: 0 40rpx;
  background-color: #fff;
  position: relative;
  z-index: 22;
}
.dialog-wrapper .content .coupon-list {
  width: 100%;
  flex: 1 1 auto;
  position: relative;
  z-index: 3;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  margin-top: 10rpx;
}
.dialog-wrapper .content .coupon-list .coupon-item {
  width: 522rpx;
  height: 176rpx;
  background-repeat: no-repeat;
  background-size: 522rpx 176rpx;
  margin-bottom: 20rpx;
}
.dialog-wrapper .content .coupon-list .coupon-item.pdd {
  background-image: url("https://piaodingding.oss-cn-hangzhou.aliyuncs.com/images/wechat/抵扣券背景小.png");
}
.dialog-wrapper .content .coupon-list .coupon-item.fdd {
  background-image: url("https://piaodingding.oss-cn-hangzhou.aliyuncs.com/images/wechat/兑换券背景小.png");
}
.dialog-wrapper
  .content
  .coupon-list
  .coupon-item.fdd
  .info-wrapper
  .desc
  .expire {
  color: #f1612a;
}
.dialog-wrapper .content .coupon-list .coupon-item .info-wrapper {
  height: 100%;
  display: flex;
  align-items: center;
}
.dialog-wrapper .content .coupon-list .coupon-item .info-wrapper .name {
  display: flex;
  padding-left: 32rpx;
  white-space: nowrap;
  width: 170rpx;
  box-sizing: border-box;
}
.dialog-wrapper .content .coupon-list .coupon-item .info-wrapper .name text {
  font-size: 48rpx;
  line-height: 48rpx;
  font-weight: 500;
  color: transparent;
  background: linear-gradient(180deg, white 0%, rgba(255, 255, 255, 0.22) 100%);
  -webkit-background-clip: text;
  background-clip: text;
}
.dialog-wrapper .content .coupon-list .coupon-item .info-wrapper .desc {
  margin-left: 32rpx;
}
.dialog-wrapper
  .content
  .coupon-list
  .coupon-item
  .info-wrapper
  .desc
  .message {
  font-size: 32rpx;
  font-weight: 500;
  color: #fff;
  line-height: 44rpx;
  white-space: nowrap;
}
.dialog-wrapper .content .coupon-list .coupon-item .info-wrapper .desc .expire {
  color: #10bcae;
  font-size: 24rpx;
  line-height: 30rpx;
  height: 30rpx;
  background-color: rgba(255, 255, 255, 0.72);
  text-align: center;
  border-radius: 2rpx;
  margin-top: 6rpx;
  padding: 0 8rpx;
}
.dialog-wrapper .content .coupon-list .free-item {
  width: 518rpx;
  height: 270rpx;
  margin-bottom: 20rpx;
  background-repeat: no-repeat;
  background-size: 518rpx 270rpx;
  background-image: url("https://piaodingding.oss-cn-hangzhou.aliyuncs.com/images/wechat/体验卡小.png");
  display: flex;
  flex-direction: column;
}
.dialog-wrapper .content .coupon-list .free-item .top {
  padding-left: 60rpx;
  padding-top: 36rpx;
  box-sizing: border-box;
  position: relative;
  z-index: 22;
}
.dialog-wrapper .content .coupon-list .free-item .top .name {
  display: flex;
  align-items: center;
  color: #464646;
  font-size: 48rpx;
  line-height: 56rpx;
  white-space: nowrap;
}
.dialog-wrapper .content .coupon-list .free-item .top .name .day {
  font-weight: 600;
  margin-right: 8rpx;
}
.dialog-wrapper .content .coupon-list .free-item .top .desc {
  margin-top: 4rpx;
  font-size: 28rpx;
  font-weight: 400;
  color: #a9885d;
  line-height: 36rpx;
  margin-bottom: 8rpx;
  white-space: nowrap;
}
.dialog-wrapper .content .coupon-list .free-item .top .expire {
  background-color: #e3caae;
  width: 260rpx;
  height: 36rpx;
  line-height: 36rpx;
  font-size: 24rpx;
  font-weight: 400;
  color: #464646;
  white-space: nowrap;
  box-sizing: border-box;
  padding-left: 12rpx;
  margin-bottom: 36rpx;
}
.dialog-wrapper .content .coupon-list .free-item .bottom {
  display: flex;
  flex: 1 1 auto;
  align-items: center;
  justify-content: flex-end;
  font-size: 24rpx;
  color: #464646;
  margin-right: 40rpx;
}
